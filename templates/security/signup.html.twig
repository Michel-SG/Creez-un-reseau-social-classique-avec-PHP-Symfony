{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Singup{% endblock %}

{% block body %}
    <h1 class="text-center mt-4 mb-4">Veuillez vous Inscrire </h1>
    <div class='row ' >
        <div class='col-md-6 mx-auto'>
            {{ form_start(form) }}
            {{ form_row(form.userName, {'label': 'Pseudo', 'attr': {'placeholder': 'Entrer votre Pseudo ...'}}) }}
            {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Entrer votre email ...'}}) }}
            {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Entrer votre mot de passe !'}}) }}
            {{ form_row(form.confirmPassword, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
            <button type="submit" class="btn btn-primary"> Valider</button>
            {{ form_end(form) }}
                     <p class="mb-3 mt-2 text-muted text-center">Avez-vous déjà un compte ? <a href="{{ path('app_signin') }}">Connectez-vous</a></p>
        </div>             
    </div>
{% endblock %}
